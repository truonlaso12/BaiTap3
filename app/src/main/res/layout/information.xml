<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundangnhap"
    >
    <Button
        android:id="@+id/btndong"
        android:layout_width="50dp"
        android:background="#00000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_baseline_close" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="182dp"
        android:layout_height="160dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="7dp"
        android:text="Phước Trường"
        android:textColor="#070707"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="290dp"
        android:textSize="22dp"
        android:textColor="#FF5722"
        android:drawableRight="@drawable/layer2"
        android:text="0  " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="290dp"
        android:textColor="#090909"
        android:textSize="22dp"
        android:text="| Khách hàng mới" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="340dp"
        android:gravity="left|center"
        android:text="  Thông tin cá nhân"
        android:textColor="#090909"
        android:textStyle="bold"
        android:textSize="24dp"
        app:autoSizeTextType="none" />

    <Button
        android:id="@+id/button10"
        android:layout_height="42dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="340dp"
        android:background="#00000000"
        android:text="Đổi"
        android:textAllCaps="false"

        android:textSize="16dp" />


      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_below="@id/textView6">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:weightSum="2"
              android:orientation="vertical">
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_gravity="center"
                  android:background="#A3A2A2"/>
              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Tên"/>
              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="Phước Trường"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_gravity="center"
                  android:background="#A3A2A2"/>
          </LinearLayout>
          <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:weightSum="2"
              android:orientation="vertical">
              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Sinh nhật"/>
              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="09/01/2000"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_gravity="center"
                  android:background="#A3A2A2"/>
          </LinearLayout>
          <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:weightSum="2"
              android:orientation="vertical">
              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Số điện thoại"/>
              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="0934802184"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_gravity="center"
                  android:background="#A3A2A2"/>
          </LinearLayout>

      </LinearLayout>
</RelativeLayout>